<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="vertical">

	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/tvActionsName"
			android:layout_height="wrap_content" android:layout_width="150dp"
			android:textSize="18sp" android:textColor="#FFFFFF"
			android:singleLine="true" android:text="浑河北岸长跑北岸" />
		<TextView android:id="@+id/tvActionsAddress"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:gravity="right" android:layout_marginLeft="15dp"
			android:singleLine="true" android:textSize="13sp"
			android:layout_toRightOf="@id/tvActionsName"
			android:layout_alignParentBottom="true" android:text="沈阳市高新区浑河路" />
	</RelativeLayout>
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:orientation="vertical">
				<TextView android:id="@+id/tvActionsStartDate"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textSize="13sp" android:text="8月5日" />
				<TextView android:id="@+id/tvActionsStartTime"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textSize="13sp" android:text="19:50" />
			</LinearLayout>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center_vertical"
				android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
				android:text="-" />
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:orientation="vertical">
				<TextView android:id="@+id/tvActionsEndDate"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textSize="13sp" android:text="8月13日" />
				<TextView android:id="@+id/tvActionsEndTime"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textSize="13sp" android:text="19:50" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentRight="true"
			android:layout_centerVertical="true">
			<TextView android:id="@+id/tvActionsNumber"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textSize="17sp" android:text="2" android:textColor="#4fae41" />
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="13sp"
				android:text="人参与" />
		</LinearLayout>
	</RelativeLayout>


</LinearLayout>