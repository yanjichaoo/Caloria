<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="fill_parent"
	android:layout_width="wrap_content">

	<LinearLayout android:layout_height="fill_parent"
		android:layout_width="wrap_content" android:orientation="vertical">
		<ImageView android:id="@+id/ivProductAd"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:src="@drawable/product_pic_1" android:layout_gravity="center_horizontal" />

		<TextView android:id="@+id/tvProductTitle"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:textColor="#FFFFFF" android:textSize="20sp"
			android:layout_marginLeft="15dp" />

		<TextView android:id="@+id/tvProductContent"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:textColor="#FFFFFF" android:layout_marginTop="10dp"
			android:textSize="15sp" android:layout_marginLeft="15dp"
			android:layout_marginRight="10dp" />
		<Button android:id="@+id/btnProductBinding"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/btn_chart_over"
			android:layout_marginTop="10dp" android:layout_gravity="center_horizontal"
			android:text="@string/common_binding" android:textColor="#333333" android:textSize="16sp" 
			android:visibility="gone"/>
	</LinearLayout>

</FrameLayout>