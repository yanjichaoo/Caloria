<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="wrap_content"
	android:background="@drawable/lineinfo_bg" android:layout_height="wrap_content">
	<LinearLayout android:layout_width="wrap_content"
		android:layout_gravity="left"	android:layout_marginTop="8dp"
		android:paddingLeft="10dp" android:orientation="vertical"
		android:layout_height="wrap_content">
		<TextView android:layout_width="wrap_content"	android:textSize="22dp" android:textColor="#FFFFFF"
			android:layout_height="wrap_content" android:id="@+id/routename"></TextView>
		<LinearLayout android:layout_width="wrap_content"
			android:orientation="horizontal" android:layout_height="wrap_content">
			<TextView android:layout_width="wrap_content" android:textSize="15dp"	android:layout_marginLeft="2dp"
				android:layout_height="wrap_content" android:id="@+id/routedist"></TextView>
			<TextView android:layout_width="wrap_content" android:textSize="15dp"	android:layout_marginLeft="13dp"
			android:text="num人关注"
				android:layout_height="wrap_content" android:id="@+id/routenotice"></TextView>
		</LinearLayout>
	</LinearLayout>
	<ImageView android:layout_width="wrap_content"	android:id="@+id/notice"
		android:layout_height="wrap_content" android:layout_marginRight="16dp"
		android:layout_marginTop="14dp"
		android:src="@drawable/btn_guanzhu" android:layout_gravity="right" />

</FrameLayout>