<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:sliderBox="http://schemas.android.com/apk/res/com.xikang.calorie.activity"
	xmlns:dragView="http://schemas.android.com/apk/res/com.xikang.calorie.activity"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center_horizontal"
	android:background="@drawable/main_frame_bg">
	<include layout="@layout/layout_title_bar" />

	<LinearLayout android:orientation="vertical"
		android:background="@drawable/layout_black_bg" style="@style/setting_layout_bg"
		android:layout_height="fill_parent" android:layout_marginBottom="15dp">

		<TextView android:id="@+id/tvRCTitle" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
			android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
			android:textColor="#FFFFFF" android:textSize="17sp" />

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp" android:background="@drawable/list_line" />

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:weightSum="2">


			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:orientation="vertical"
				android:weightSum="3" android:layout_weight="1" android:gravity="right"
				android:paddingRight="20dp">

				<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:orientation="vertical"
					android:gravity="right|center_vertical" android:layout_weight="1">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:textSize="15sp"
						android:textColor="#FFFFFF" android:text="早饭前" />
					<TextView android:id="@+id/tvRCMorning"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:textSize="15sp" android:textColor="#bcdec5" />
				</LinearLayout>

				<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:orientation="vertical"
					android:gravity="right|center_vertical" android:layout_weight="1">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:textSize="15sp"
						android:textColor="#FFFFFF" android:text="午饭后" />
					<TextView android:id="@+id/tvRCNoon" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:textSize="15sp"
						android:textColor="#deff1a" />
				</LinearLayout>

				<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:orientation="vertical"
					android:gravity="right|center_vertical" android:layout_weight="1">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:textSize="15sp"
						android:textColor="#FFFFFF" android:text="晚饭后" />
					<TextView android:id="@+id/tvRCNight"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:textSize="15sp" android:textColor="#00adcd" />
				</LinearLayout>

			</LinearLayout>

			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:layout_weight="1">
				<com.xikang.calorie.view.DragView
					android:id="@+id/dgRCSet" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_gravity="center_vertical" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>
